@page
@model Uzdevums2.WebClient.Areas.Identity.Pages.Transactions.NewTransactionModel
@{
    ViewData["Title"] = "Add New Transaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="NewFinancialTransaction" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.ToUsername"></label>
                    <input asp-for="Input.ToUsername" class="form-control" />
                    <span asp-validation-for="Input.ToUsername" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Amount"></label>
                    <input asp-for="Input.Amount" class="form-control" />
                    <span asp-validation-for="Input.Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Description"></label>
                    <input asp-for="Input.Description" class="form-control" />
                    <span asp-validation-for="Input.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-page="./ViewTransactions" asp-route-returnUrl="@Model.ReturnUrl">Cancel</a>
                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
